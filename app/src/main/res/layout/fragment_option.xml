<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".ui.option.OptionFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/notice_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/teal_200"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_volume_up_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_square_bold"
                android:gravity="center"
                android:text="공지사항"
                android:textSize="30sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/preference_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/teal_200"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_settings_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_square_bold"
                android:gravity="center"
                android:text="사용자 설정"
                android:textSize="30sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/help_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/teal_200"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_live_help_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_square_bold"
                android:gravity="center"
                android:text="도움말"
                android:textSize="30sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/version_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/teal_200"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_info_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_square_bold"
                android:gravity="center"
                android:text="버전정보"
                android:textSize="30sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/help_us_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/teal_200"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_emoji_emotions_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_square_bold"
                android:gravity="center"
                android:text="Help us"
                android:textSize="30sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>