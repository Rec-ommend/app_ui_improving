<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.msearch.MsearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/msearch_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|top"
            android:text="본인의 목소리를 녹음하여\n부르기 쉬운 노래를 추천합니다."
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/m_rec_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_fiber_manual_record_24" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/m_json_test_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JSON TEST" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/m_rec_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.14"
        android:src="@android:drawable/screen_background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#ff0000" />

</androidx.constraintlayout.widget.ConstraintLayout>