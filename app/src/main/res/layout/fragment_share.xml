<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        tools:context=".ui.share.ShareFragment">

        <TextView
            android:id="@+id/share_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/description_share"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/voice_color"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/white"
            app:tint="@color/light_blue_600" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/share_btn"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/nanum_square_bold"
            android:text="@string/title_share_btn"
            android:textSize="30sp"
            app:icon="@drawable/ic_baseline_share_24" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7" />

    </LinearLayout>

    <ImageView
        android:id="@+id/popup_back_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@android:drawable/screen_background_dark_transparent" />

</FrameLayout>